<UserControl x:Class="QuickPoker.GameBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuickPoker"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1000">
    <UniformGrid Rows="2" Columns="1">
        <UniformGrid Name="BackGroundGrid" Width="900" Height="300" Rows="1" Columns="5">
        </UniformGrid>
        <Canvas Name="BackGroundCanvas" Width="900" Height="300" Background="LightGray"></Canvas>
    </UniformGrid>
</UserControl>
